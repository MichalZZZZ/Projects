    <div class="d-flex justify-content-center align-items-center">
        <div class="card login-form">
            <div class="card-header title-login-form">
                <h5>Zarejestruj się</h5>
            </div>
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger">
                    {{ message }}
                </div>
            {% endfor %}
            {% form_theme registrationForm 'bootstrap_5_layout.html.twig' %}
            {{ form_start(registrationForm, {'attr': {'class': 'form-control-2'}} ) }}
            <div class="mt-3">
            <h6>{{ form_row(registrationForm.name) }}</h6>
                <h6>{{ form_row(registrationForm.lastname) }}</h6>
                <h6>{{ form_row(registrationForm.phone) }}</h6>
                <h6>{{ form_row(registrationForm.username) }}</h6>
                <h6>{{ form_row(registrationForm.email) }}</h6>
                <h6>{{ form_row(registrationForm.plainPassword) }}</h6>
                <h6>{{ form_row(registrationForm.agreeTerms) }}</h6>
            <button class="btn btn-primary mb-5 mt-3">Załóż konto</button>
            </div>
            {{ form_end(registrationForm) }}
        </div>
    </div>
